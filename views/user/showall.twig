{% extends'masterpage.twig' %}

{% block body %}
    {% if users|length > 0 %}
        <table border="1">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Family</th>
                <th>Age</th>
            </tr>
            {% set i = 0 %}
            {% for user in users %}
                {% set i = i+1 %}
                <tr>
                    <td>{{ i }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.family }}</td>
                    <td>{{ user.age }}</td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        There is no users
    {% endif %}
{% endblock %}